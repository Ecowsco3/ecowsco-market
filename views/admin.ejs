<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Admin Dashboard</title>
<script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen p-6">
<% if(!admin){ %>
  <div class="flex items-center justify-center h-screen">
    <form action="/admin-login" method="POST" class="bg-white p-6 rounded shadow w-full max-w-sm">
      <h2 class="text-2xl font-bold mb-4">Admin Login</h2>
      <input type="text" name="username" placeholder="Username" class="w-full border px-3 py-2 rounded mb-2">
      <input type="password" name="password" placeholder="Password" class="w-full border px-3 py-2 rounded mb-2">
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 w-full">Login</button>
    </form>
  </div>
<% }else{ %>
  <h1 class="text-3xl font-bold mb-4">Admin Dashboard</h1>
  <div class="mb-4">
    <p>Total Stores: <%= totalStores %></p>
    <p>Total Products: <%= totalProducts %></p>
  </div>

  <h2 class="text-2xl font-bold mb-2">Stores</h2>
  <table class="w-full bg-white rounded shadow">
    <thead class="bg-gray-200">
      <tr>
        <th class="p-2">Name</th>
        <th>Email</th>
        <th>Store Name</th>
        <th>Products</th>
        <th>WhatsApp</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% stores.forEach(s => { 
           const productCount = products.filter(p=>p.vendor_id===s.id).length;
      %>
      <tr class="border-t">
        <td class="p-2"><%= s.name %></td>
        <td><%= s.email %></td>
        <td><%= s.store_name %></td>
        <td><%= productCount %></td>
        <td>
          <% if(s.whatsapp){ %>
            <a href="<%= s.whatsapp %>" target="_blank" class="text-green-500">WhatsApp</a>
          <% } %>
        </td>
        <td>
          <form action="/admin/delete-store/<%= s.id %>" method="POST">
            <button class="bg-red-500 text-white px-2 py-1 rounded hover:bg-red-600">Delete</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>
</body>
</html>