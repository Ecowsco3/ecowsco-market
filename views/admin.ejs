<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Admin Dashboard - Ecowsco Market</title>
<script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen">
<% if(!admin){ %>
  <div class="flex items-center justify-center min-h-screen px-4">
    <div class="bg-white p-8 rounded-2xl shadow-xl w-full max-w-md">
      <div class="text-center mb-6">
        <h2 class="text-3xl font-bold text-red-600">Admin Login</h2>
        <p class="text-gray-600 mt-2">Access admin dashboard</p>
      </div>
      <form action="/admin-login" method="POST" class="space-y-4">
        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2">Username</label>
          <input type="text" name="username" placeholder="Admin username" 
                 class="w-full border-2 border-gray-200 px-4 py-3 rounded-lg focus:border-red-500 focus:outline-none transition">
        </div>
        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2">Password</label>
          <input type="password" name="password" placeholder="••••••••" 
                 class="w-full border-2 border-gray-200 px-4 py-3 rounded-lg focus:border-red-500 focus:outline-none transition">
        </div>
        <button type="submit" 
                class="w-full bg-gradient-to-r from-red-500 to-red-600 text-white px-6 py-3 rounded-lg font-semibold hover:from-red-600 hover:to-red-700 transition shadow-lg">
          Login
        </button>
      </form>
      <p class="mt-6 text-center text-sm text-gray-600">
        <a href="/" class="text-blue-600 hover:text-blue-800 font-medium">← Back to Home</a>
      </p>
    </div>
  </div>
<% }else{ %>
  <nav class="bg-white shadow-md mb-8">
    <div class="max-w-7xl mx-auto px-6 py-4">
      <h1 class="text-2xl font-bold text-red-600">Admin Dashboard</h1>
    </div>
  </nav>

  <div class="max-w-7xl mx-auto px-6 pb-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
      <div class="bg-white rounded-xl shadow-lg p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-600 text-sm font-medium">Total Stores</p>
            <p class="text-4xl font-bold text-blue-600 mt-2"><%= totalStores %></p>
          </div>
          <div class="bg-blue-100 p-4 rounded-full">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-xl shadow-lg p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-600 text-sm font-medium">Total Products</p>
            <p class="text-4xl font-bold text-green-600 mt-2"><%= totalProducts %></p>
          </div>
          <div class="bg-green-100 p-4 rounded-full">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
      <div class="p-6 border-b">
        <h2 class="text-2xl font-bold text-gray-800">All Stores</h2>
      </div>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Name</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Email</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Store Name</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Products</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">WhatsApp</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Action</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% stores.forEach(s => { 
                 const productCount = products.filter(p=>p.vendor_id===s.id).length;
            %>
            <tr class="hover:bg-gray-50 transition">
              <td class="px-6 py-4 text-sm text-gray-900"><%= s.name %></td>
              <td class="px-6 py-4 text-sm text-gray-600"><%= s.email %></td>
              <td class="px-6 py-4">
                <a href="/store/<%= s.store_name %>" target="_blank" class="text-sm text-blue-600 hover:text-blue-800 font-medium">
                  <%= s.store_name %>
                </a>
              </td>
              <td class="px-6 py-4">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= productCount %> products
                </span>
              </td>
              <td class="px-6 py-4">
                <% if(s.whatsapp){ %>
                  <a href="<%= s.whatsapp %>" target="_blank" class="text-green-600 hover:text-green-800 text-sm font-medium">
                    Contact
                  </a>
                <% } else { %>
                  <span class="text-gray-400 text-sm">-</span>
                <% } %>
              </td>
              <td class="px-6 py-4">
                <form action="/admin/delete-store/<%= s.id %>" method="POST">
                  <button class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition text-sm font-medium">
                    Delete
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% } %>
</body>
</html>