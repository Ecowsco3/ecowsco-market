<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Dashboard - Ecowsco Market</title>
<script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen relative">

  <!-- Toast Notification -->
  <% if (success == 1) { %>
    <div id="toast" class="fixed top-5 right-5 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg transition-transform transform translate-y-0">
      Profile updated successfully!
    </div>
    <script>
      setTimeout(() => {
        const toast = document.getElementById('toast');
        if (toast) toast.style.transform = 'translateY(-200%)';
      }, 3000);
    </script>
  <% } %>

  <!-- Navbar -->
  <nav class="bg-white shadow-md">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 py-4 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
      <div class="text-center sm:text-left">
        <h1 class="text-2xl font-bold text-gray-800">Ecowsco Market</h1>
        <p class="text-sm text-gray-600">Welcome, <%= vendor.name %></p>
      </div>
      <div class="text-center sm:text-right">
        <a href="/logout" 
           class="inline-block bg-red-500 text-white px-5 py-2 rounded-lg hover:bg-red-600 transition font-medium text-sm sm:text-base w-full sm:w-auto">
          Logout
        </a>
      </div>
    </div>
  </nav>

  <!-- Dashboard Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-8 space-y-8">

    <!-- Profile Card -->
    <div class="bg-white rounded-2xl shadow-xl p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl sm:text-2xl font-bold text-gray-800">Your Profile</h2>
        <button id="toggleProfile" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition font-medium">
          Toggle
        </button>
      </div>

      <!-- Profile Form (collapsible) -->
      <div id="profileFormWrapper" class="overflow-hidden transition-all duration-500 ease-in-out max-h-[2000px]">
        <div class="flex flex-col sm:flex-row sm:items-center gap-6 mb-4">
          <!-- Avatar -->
          <div class="w-20 h-20 bg-blue-500 text-white flex items-center justify-center rounded-full font-bold text-2xl">
            <%= vendor.name.split(' ').map(n => n[0]).join('') %>
          </div>
          <div class="flex-1"></div>
        </div>

        <form action="/update-profile" method="POST" class="space-y-4">
          <div>
            <label class="block text-gray-700 font-medium mb-1">Name</label>
            <input type="text" name="name" value="<%= vendor.name %>" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" required>
          </div>

          <div>
            <label class="block text-gray-700 font-medium mb-1">Email</label>
            <input type="email" name="email" value="<%= vendor.email %>" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" required>
          </div>

          <div>
            <label class="block text-gray-700 font-medium mb-1">Store Name</label>
            <input type="text" name="store_name" value="<%= vendor.store_name %>" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" required>
          </div>

          <div>
            <label class="block text-gray-700 font-medium mb-1">WhatsApp</label>
            <input type="text" name="whatsapp" value="<%= vendor.whatsapp || '' %>" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
          </div>

          <div>
            <label class="block text-gray-700 font-medium mb-1">Store Description</label>
            <textarea name="description" rows="3" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"><%= vendor.description || '' %></textarea>
          </div>

          <div>
            <label class="block text-gray-700 font-medium mb-1">New Password (leave blank to keep current)</label>
            <input type="password" name="password" placeholder="••••••••" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
          </div>

          <button type="submit" class="bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition font-semibold">
            Update Profile
          </button>
        </form>
      </div>
    </div>

    <!-- Add New Product Button -->
    <div class="text-center sm:text-left">
      <a href="/add-product" 
         class="inline-block bg-gradient-to-r from-green-500 to-emerald-600 text-white px-6 py-3 rounded-lg hover:from-green-600 hover:to-emerald-700 transition font-semibold shadow-lg text-sm sm:text-base">
        + Add New Product
      </a>
    </div>

    <!-- Products Section -->
    <div class="bg-white rounded-2xl shadow-xl p-5 sm:p-6 lg:p-8">
      <h2 class="text-xl sm:text-2xl font-bold mb-6 text-gray-800 text-center sm:text-left">Your Products</h2>
        
      <% if (products.length === 0) { %>
        <!-- Empty State -->
        <div class="text-center py-12 px-4">
          <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"   
                  d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
          </svg>
          <p class="text-gray-500 text-lg">No products yet. Start by adding your first product!</p>
        </div>
      <% } else { %>

        <!-- Product Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% products.forEach(p => { %>
            <div class="bg-white border-2 border-gray-100 rounded-xl shadow-md hover:shadow-xl transition overflow-hidden flex flex-col">
              <img src="<%= p.image %>" alt="<%= p.name %>" class="w-full h-48 object-cover">
                
              <div class="p-4 flex flex-col flex-grow">
                <h3 class="font-bold text-lg text-gray-800 mb-1 text-center sm:text-left"><%= p.name %></h3>
                <p class="text-2xl font-bold text-green-600 mb-2 text-center sm:text-left">₵<%= p.price %></p>
                <p class="text-sm text-gray-600 mb-4 flex-grow"><%= p.description || 'No description' %></p>

                <div class="flex flex-col sm:flex-row gap-2 mt-auto">
                  <a href="/edit-product/<%= p.id %>"   
                     class="w-full sm:w-1/2 bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition text-sm font-medium text-center">
                    Edit
                  </a>
                  <form action="/delete-product/<%= p.id %>" method="POST" class="w-full sm:w-1/2"
                        onsubmit="return confirm('Are you sure you want to delete this product?')">
                    <button type="submit"   
                            class="w-full bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition text-sm font-medium">
                      Delete
                    </button>
                  </form>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>

  </div>

  <!-- Toggle Script -->
  <script>
    const toggleBtn = document.getElementById('toggleProfile');
    const profileWrapper = document.getElementById('profileFormWrapper');

    toggleBtn.addEventListener('click', () => {
      if (profileWrapper.style.maxHeight && profileWrapper.style.maxHeight !== '0px') {
        profileWrapper.style.maxHeight = '0px';
      } else {
        profileWrapper.style.maxHeight = profileWrapper.scrollHeight + 'px';
      }
    });

    // Initialize open
    profileWrapper.style.maxHeight = profileWrapper.scrollHeight + 'px';
  </script>

</body>
</html>